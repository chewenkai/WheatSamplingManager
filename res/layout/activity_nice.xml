<!--左侧的SlideMenu部分-->

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
         >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#CCCCCC">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#CCCCCC">

                <LinearLayout
                    android:id="@+id/unit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/theme_primary"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:orientation="horizontal">

                    <com.pkmmte.view.CircularImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_launcher1"
                        android:layout_marginLeft="0dp"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/drawer_header_text_spacing">
                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name"
                            android:textColor="@color/text_white_87"
                            android:textSize="@dimen/drawer_header_textsize" />
                        <TextView
                            android:id="@+id/company_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name"
                            android:textColor="#e9dfdf"
                            android:textSize="@dimen/drawer_second_header_textsize" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:background="@drawable/background_login_div"
                    android:visibility="gone">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:id="@+id/unit_img"
                            android:layout_width="20dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/person"/>
                        <TextView
                            android:id="@+id/unit_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/unit_img"
                            android:layout_marginLeft="10dp"
                            android:layout_alignBaseline="@+id/unit_img"
                            android:textSize="@dimen/text_size"
                            android:text="基本信息"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/data_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:background="@drawable/background_login_div">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:id="@+id/data_img"
                            android:layout_width="20dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/wifi"/>
                        <TextView
                            android:id="@+id/data_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/data_img"
                            android:layout_marginLeft="10dp"
                            android:layout_alignBaseline="@+id/data_img"
                            android:textSize="@dimen/text_size"
                            android:text="数据传输"/>
                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/clear_cache_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:background="@drawable/background_login_div"
                    android:visibility="gone">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        >
                        <ImageView
                            android:id="@+id/clear_cache_img"
                            android:layout_width="20dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_alignBaseline="@+id/clear_cache_tv"
                            android:src="@drawable/img_cache"/>
                        <TextView
                            android:id="@+id/clear_cache_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/clear_cache_img"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/text_size"
                            android:text="清除缓存"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/toolbox_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:background="@drawable/background_login_div">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        >
                        <ImageView
                            android:id="@+id/toolbox_img"
                            android:layout_width="20dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_alignBaseline="@+id/toolbox_tv"
                            android:src="@drawable/navigation"/>
                        <TextView
                            android:id="@+id/toolbox_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/toolbox_img"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/text_size"
                            android:text="工具箱"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vertion_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:background="@drawable/background_login_div"
                    android:visibility="gone">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        >
                        <ImageView
                            android:id="@+id/version_img"
                            android:layout_width="20dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_alignBaseline="@+id/version_tv"
                            android:src="@drawable/version"/>
                        <TextView
                            android:id="@+id/version_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/version_img"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/text_size"
                            android:text="版本信息"/>
                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/exitapp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:background="@drawable/background_login_div"
                    android:visibility="visible">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        >
                        <ImageView
                            android:id="@+id/exitapp_img"
                            android:layout_width="20dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_alignBaseline="@+id/exitapp_tv"
                            android:src="@drawable/exit_img"/>
                        <TextView
                            android:id="@+id/exitapp_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/exitapp_img"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/text_size"
                            android:text="退出应用"/>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </android.support.design.widget.NavigationView>






</android.support.v4.widget.DrawerLayout>
