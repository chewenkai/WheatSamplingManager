<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CCCCCC" >
    <include  
        android:id="@+id/head_layout"  
        layout="@layout/head_panel_layout" />
    <ScrollView 
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:background="#CCCCCC">
        <LinearLayout 
            android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:background="#CCCCCC">
            
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="27sp"
		        android:layout_marginTop="30dp"
		        android:layout_marginLeft="30dp"
				android:layout_marginBottom="10dp"
		        android:textColor="@android:color/holo_blue_dark"
		        android:text="个人信息"/>
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:padding="15dip"        
		    	android:layout_marginLeft="30dp" 
		    	android:layout_marginRight="30dp" 
		    	android:orientation="vertical"
		    	android:background="@drawable/background_login_div">
		        <LinearLayout 
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:orientation="vertical">
		            <TextView 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textSize="24sp"
						android:textColor="@color/text_color_theme_dark2"
		                android:text="帐户"/>
		            <EditText 
		                android:id="@+id/user_reg"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="10dp"
		                android:textSize="20sp"
						android:textColor="@color/text_color_gray"
		                />
		        </LinearLayout>
		        <LinearLayout 
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:orientation="vertical">
		            <TextView 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textSize="24sp"
						android:textColor="@color/text_color_theme_dark2"
		                android:text="密码"/>
		            <EditText 
		                android:id="@+id/pwd_reg"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="10dp"
		                android:textSize="20sp"
						android:textColor="@color/text_color_gray"
		                android:inputType="textPassword"
		                />
		        </LinearLayout>
		        <LinearLayout 
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:orientation="vertical">
		            <TextView 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textSize="24sp"
						android:textColor="@color/text_color_theme_dark2"
		                android:text="确认密码"/>
		            <EditText 
		                android:id="@+id/repwd_reg"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="10dp"
		                android:textSize="20sp"
						android:textColor="@color/text_color_gray"
		                android:inputType="textPassword"
		                />
		        </LinearLayout>
		    </LinearLayout>
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="27sp"
		        android:layout_marginTop="30dp"
		        android:layout_marginLeft="30dp"
				android:layout_marginBottom="10dp"
		        android:textColor="@android:color/holo_blue_dark"
		        android:text="监控信息"
		        />
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:padding="15dip"        
		    	android:layout_marginLeft="30dp" 
		    	android:layout_marginRight="30dp" 
		    	android:orientation="vertical"
		    	android:background="@drawable/background_login_div">
		        <LinearLayout 
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal">
		            <TextView 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textSize="24sp"
						android:textColor="@color/text_color_theme_dark2"
		                android:text="电话:"/>
		            <EditText 
		                android:id="@+id/jiankong_dianhua"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="10dp"
		                 android:inputType="phone"
						android:textColor="@color/text_color_gray"
		                android:textSize="20sp"/>
		        </LinearLayout>
		    </LinearLayout>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="27sp"
	        android:layout_marginTop="30dp"
	        android:layout_marginLeft="30dp"
			android:layout_marginBottom="10dp"
	        android:textColor="@android:color/holo_blue_dark"
	        android:text="抽样单位信息"/>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="15dip"        
	    	android:layout_marginLeft="30dp" 
	    	android:layout_marginRight="30dp" 
	    	android:orientation="vertical"
	    	android:background="@drawable/background_login_div">
            <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="24sp"
					android:textColor="@color/text_color_theme_dark2"
	                android:text="名称:"/>
	            <EditText 
	                android:id="@+id/unit_name_reg"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
					android:textColor="@color/text_color_gray"
	                android:textSize="20sp"
	                />
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="24sp"
					android:textColor="@color/text_color_theme_dark2"
	                android:text="地址:"/>
	            <EditText 
	                android:id="@+id/unit_addr_reg"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
					android:textColor="@color/text_color_gray"
	                android:textSize="20sp"
	                />
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="24sp"
					android:textColor="@color/text_color_theme_dark2"
	                android:text="邮编:"/>
	            <EditText 
	                android:id="@+id/unit_post_reg"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:inputType="number"
					android:textColor="@color/text_color_gray"
	                android:textSize="20sp"
	                />
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="24sp"
					android:textColor="@color/text_color_theme_dark2"
	                android:text="电话:"/>
	            <EditText 
	                android:id="@+id/unit_phone"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:inputType="phone"
					android:textColor="@color/text_color_gray"
	                android:textSize="20sp"
	                />
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="24sp"
					android:textColor="@color/text_color_theme_dark2"
	                android:text="传真:"/>
	            <EditText 
	                android:id="@+id/unit_cz_reg"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:textSize="20sp"
					android:textColor="@color/text_color_gray"
	                />
	        </LinearLayout>
	    </LinearLayout>
        </LinearLayout>
    </ScrollView>
    

</LinearLayout>
