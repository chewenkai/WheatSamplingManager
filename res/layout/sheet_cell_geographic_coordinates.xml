<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cell_edit_text_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cell_fill_required"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top"
            android:layout_gravity="top"
            android:text="*"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/cell_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="地理位置坐标单元格的名称"
            android:textColorHint="@color/sheet_cell_name_color"
            app:hintTextAppearance="@style/TextLabel">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/cell_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="地理位置坐标单元格的值"
                android:textColor="@color/sheet_cell_value_color"
                android:textSize="@dimen/sheet_cell_value_font"
                android:textColorLink="@color/colorAccent"/>
        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/cell_printable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
    </LinearLayout>


    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/black" />-->
</LinearLayout>