<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efefef"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#efefef"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/unit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_setting_button_style"
                android:gravity="left|center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <com.pkmmte.view.CircularImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_launcher1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/drawer_header_text_spacing"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="#333333"
                        android:textSize="@dimen/drawer_header_textsize" />

                    <TextView
                        android:id="@+id/company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="#a6a6a6"
                        android:textSize="@dimen/drawer_second_header_textsize" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/background_login_div"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/unit_img"
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/person" />

                    <TextView
                        android:id="@+id/unit_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/unit_img"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/unit_img"
                        android:text="基本信息"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/check_new_task_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/selector_setting_button_style"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="30dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/data_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/update" />

                    <TextView
                        android:id="@+id/data_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/data_img"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/data_img"
                        android:text="检查新任务"
                        android:textColor="#444444"
                        android:textSize="17sp" />
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/clear_cache_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/setting_item_bg"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/clear_cache_img"
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_alignBaseline="@+id/clear_cache_tv"
                        android:layout_centerVertical="true"
                        android:src="@drawable/img_cache" />

                    <TextView
                        android:id="@+id/clear_cache_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/clear_cache_img"
                        android:text="清除缓存"
                        android:textSize="@dimen/text_size" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/toolbox_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/selector_setting_button_style"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="30dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/toolbox_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignBaseline="@+id/toolbox_tv"
                        android:layout_centerVertical="true"
                        android:src="@drawable/toolbox" />

                    <TextView
                        android:id="@+id/toolbox_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/toolbox_img"
                        android:text="采样工具箱"
                        android:textColor="#444444"
                        android:textSize="17sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contactme_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/selector_setting_button_style"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="30dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/contactme_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignBaseline="@+id/contactme_tv"
                        android:layout_centerVertical="true"
                        android:src="@drawable/suggestion" />

                    <TextView
                        android:id="@+id/contactme_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/contactme_img"
                        android:text="意见反馈"
                        android:textColor="#444444"
                        android:textSize="17sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vertion_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/selector_setting_button_style"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="30dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp">
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/version_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignBaseline="@+id/version_tv"
                        android:layout_centerVertical="true"
                        android:src="@drawable/version" />

                    <TextView
                        android:id="@+id/version_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/version_img"
                        android:text="关于软件"
                        android:textColor="#444444"
                        android:textSize="17sp" />
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/exitapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/selector_setting_button_style"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="30dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/exitapp_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignBaseline="@+id/exitapp_tv"
                        android:layout_centerVertical="true"
                        android:src="@drawable/exit_img" />

                    <TextView
                        android:id="@+id/exitapp_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/exitapp_img"
                        android:text="注销"
                        android:textColor="#444444"
                        android:textSize="17sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL_debug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/selector_setting_button_style"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="30dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/debug_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignBaseline="@+id/debug_tv"
                        android:layout_centerVertical="true"
                        android:src="@drawable/filecab_metal" />

                    <TextView
                        android:id="@+id/debug_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/debug_img"
                        android:text="开发者调试"
                        android:textColor="#444444"
                        android:textSize="17sp" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>