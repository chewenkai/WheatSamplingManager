<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CCCCCC" >
    
	<ScrollView 
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:background="#CCCCCC">
        <LinearLayout 
            android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:background="#CCCCCC">
		    
		    
		    <LinearLayout 
		        android:id="@+id/unit_btn"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:padding="15dip"        
		    	android:layout_marginTop="30dp"
		    	android:clickable="true"
		    	android:orientation="vertical"
		    	android:background="@drawable/background_login_div">
		        <RelativeLayout 
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            >
		            <ImageView 
		                android:id="@+id/unit_img"
		                android:layout_width="20dp"
		                android:layout_height="25dp"
		                android:layout_centerVertical="true"
		                android:src="@drawable/person"/>
		            <TextView 
		                android:id="@+id/unit_tv"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_toRightOf="@+id/unit_img"
		                android:layout_marginLeft="10dp"
		                android:layout_alignBaseline="@+id/unit_img"
		                android:textSize="@dimen/text_size"
		                android:text="基本信息"/>
		        </RelativeLayout>
		    </LinearLayout>
		    
		    <LinearLayout 
		        android:id="@+id/data_btn"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:padding="15dip"        
		    	android:layout_marginTop="30dp"
		    	android:clickable="true"
		    	android:orientation="vertical"
		    	android:background="@drawable/background_login_div">
		        <RelativeLayout 
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            >
		            <ImageView 
		                android:id="@+id/data_img"
		                android:layout_width="20dp"
		                android:layout_height="25dp"
		                android:layout_centerVertical="true"
		                android:src="@drawable/wifi"/>
		            <TextView 
		                android:id="@+id/data_tv"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_toRightOf="@+id/data_img"
		                android:layout_marginLeft="10dp"
		                android:layout_alignBaseline="@+id/data_img"
		                android:textSize="@dimen/text_size"
		                android:text="数据传输"/>
		        </RelativeLayout>
		    </LinearLayout>


			<LinearLayout
				android:id="@+id/clear_cache_btn"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="15dip"
				android:layout_marginTop="30dp"
				android:clickable="true"
				android:orientation="vertical"
				android:background="@drawable/background_login_div">
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_gravity="center_vertical"
					>
					<ImageView
						android:id="@+id/clear_cache_img"
						android:layout_width="20dp"
						android:layout_height="25dp"
						android:layout_centerVertical="true"
						android:layout_alignBaseline="@+id/clear_cache_tv"
						android:src="@drawable/img_cache"/>
					<TextView
						android:id="@+id/clear_cache_tv"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_toRightOf="@+id/clear_cache_img"
						android:layout_marginLeft="10dp"
						android:layout_centerVertical="true"
						android:textSize="@dimen/text_size"
						android:text="清除缓存"/>
				</RelativeLayout>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/map_navi_btn"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="15dip"
				android:layout_marginTop="30dp"
				android:clickable="true"
				android:orientation="vertical"
				android:background="@drawable/background_login_div">
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_gravity="center_vertical"
					>
					<ImageView
						android:id="@+id/map_navi_img"
						android:layout_width="20dp"
						android:layout_height="25dp"
						android:layout_centerVertical="true"
						android:layout_alignBaseline="@+id/map_navi_tv"
						android:src="@drawable/navigation"/>
					<TextView
						android:id="@+id/map_navi_tv"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_toRightOf="@+id/map_navi_img"
						android:layout_marginLeft="10dp"
						android:layout_centerVertical="true"
						android:textSize="@dimen/text_size"
						android:text="地图导航"/>
				</RelativeLayout>
			</LinearLayout>

		    <LinearLayout 
		        android:id="@+id/vertion_btn"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:padding="15dip"        
		    	android:layout_marginTop="30dp"
		    	android:clickable="true"
		    	android:orientation="vertical"
		    	android:background="@drawable/background_login_div">
		        <RelativeLayout 
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:layout_gravity="center_vertical"
		            >
		            <ImageView 
		                android:id="@+id/version_img"
		                android:layout_width="20dp"
		                android:layout_height="25dp"
		                android:layout_centerVertical="true"
		                android:layout_alignBaseline="@+id/version_tv"
		                android:src="@drawable/version"/>
		            <TextView 
		                android:id="@+id/version_tv"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_toRightOf="@+id/version_img"
		                android:layout_marginLeft="10dp"
		                android:layout_centerVertical="true"
		                android:textSize="@dimen/text_size"
		                android:text="版本信息"/>
		        </RelativeLayout>
		    </LinearLayout>
		    
        </LinearLayout>
    </ScrollView>
</LinearLayout>
