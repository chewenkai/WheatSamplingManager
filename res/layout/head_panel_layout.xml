<?xml version="1.0" encoding="utf-8"?>
<com.aj.collection.activity.ui.HeadControlPanel xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="0dp"
    android:paddingBottom="5dp"
    android:gravity="center_vertical"
    android:layout_alignParentTop="true" >

     <ImageView
         android:id="@+id/left_img"
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:layout_alignParentLeft="true"
         android:layout_centerVertical="true"
         android:layout_marginTop="5dp"
         android:layout_marginLeft="10dp"
         android:src="@drawable/ic_menu_back"
         />

    <View
        android:id="@+id/PanelDivider"
        android:layout_width="2px"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/left_img"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="#000000"/>
     <TextView
        android:id="@+id/midle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginTop="5dp"
         android:layout_toRightOf="@+id/PanelDivider"
         android:layout_toLeftOf="@+id/right_buttons"
         android:layout_centerVertical="true"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
        android:textSize="20sp"
         android:text="TITLE"
        android:textColor="@android:color/white"/>

    <LinearLayout
        android:id="@+id/right_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true">

        <com.aj.collection.activity.ui.ImageText
            android:id="@+id/right_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:visibility="gone"
            />
        <com.aj.collection.activity.ui.ImageText
            android:id="@+id/right_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:visibility="gone"
            />
        <com.aj.collection.activity.ui.ImageText
            android:id="@+id/right_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:visibility="gone"
            />
    </LinearLayout>



</com.aj.collection.activity.ui.HeadControlPanel>
